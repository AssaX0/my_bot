<?xml version="1.0"?>

<launch>
    
    <node name="joint_state_publisher_gui" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui">
        <param name="robot_description" textfile="$(find my_bot)/description/robot.urdf.xacro'" />
        <param name="use_sim_time" value="$(find my_bot)/description/robot.urdf.xacro'" />
    </node>
    <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher" />
    
    <node pkg="my_package" exec="md25_drive_node"/>
    <include file="$(find-pkg-share my_bot)/launch/launch_camera.launch.py"/>
    <include file="$(find-pkg-share ydlidar_ros2_driver)/launch/ydlidar_launch.py"/>
</launch>
